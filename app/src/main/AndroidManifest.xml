<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.administrator.createactivity" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".FirstActivity"
            android:label="This is first" >
//显示的应用的名字
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SecondActivity">
            <intent-filter>
              <category android:name="android.intent.category.DEFAULT"/>
                <action android:name="com.example.administrator.createactivity.intent.action.SecondActivity"/>
                <category android:name="com.example.administrator.createactivity.MY_CATEGORY"/>
            </intent-filter>
        </activity>
    </application>

</manifest>
